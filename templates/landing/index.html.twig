{% extends 'base.html.twig' %}

{% block title %}
    {{parent()}} - Home
{% endblock %}

{% block body %}
    <div class="container mt-7 mb-5">
        <h1 class="text-center text-blue">Conosca la galeria de imagenes de The Galery</h1>
        <div class="row justify-content-center">
            {% for post in pagination %}
                <div class="card custom-card justify-content-center" style="width: 200px; height: 150px" onclick="window.location.href='{{ path('Verpost', {id:post.id})}}'">
                    <div class="card-img-top">
                        <img class="custom-img" src="{{ asset('uploads/photos/'~post.imagen) }}">
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
