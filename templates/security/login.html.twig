{<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome to The-Galery{% endblock %}</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    {% endblock %}

</head>

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-end">
            <a class="btn btn-login" href="{{ path('register') }}">Registrar</a>
        </div>
        <div class="row custom-top justify-content-center align-content-center">
            <div class="col-md-6 rounded my-3 p-5">
                <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3 text-center">
                        Estas logado como <b> {{ app.user.username }}</b>
                    </div>
                {% endif %}

                <h1 class="h3 mt-4 mb-3 font-weight-normal text-blue text-center">Â¡Bienvenido!<br> Entra con su email y password</h1>
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                <label for="inputPassword" class="mt-3">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}">


    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

                <button class="btn btn-login mt-4 justify-content-center" type="submit">
                    Login
                </button>
            </form>
        </div>
        </div>

    </div>
{% endblock %}
